<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="info"
            type="es.littledavity.dynamicfeatures.chorboList.detail.model.InfoItem.Item" />

        <variable
            name="value"
            type="es.littledavity.dynamicfeatures.chorboList.detail.model.InfoData.Simple" />

        <variable
            name="viewModel"
            type="es.littledavity.dynamicfeatures.chorboList.detail.ChorboDetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detail_item_margin">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/itemContainer"
            android:layout_width="@dimen/detail_item_card_size"
            android:layout_height="@dimen/detail_item_card_size"
            android:elevation="8dp"
            app:cardBackgroundColor="@color/accent"
            app:cardCornerRadius="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visible="@{info.info.icon != view.NO_ID}">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcVector="@{info.info.icon}"
                tools:srcCompat="@drawable/ic_location" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text"
            style="@style/TextAppearance.CardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detail_item_margin"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{value.value}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemContainer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="EspaÃ±a" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
