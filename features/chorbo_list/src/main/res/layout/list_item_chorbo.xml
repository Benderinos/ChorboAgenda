<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="Integer" />

        <variable
            name="chorbo"
            type="es.littledavity.dynamicfeatures.chorboList.list.model.ChorboItem" />

        <variable
            name="viewModel"
            type="es.littledavity.dynamicfeatures.chorboList.list.ChorboListViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.openChorboDetail(chorbo.name, chorbo.id, characterImage, chorboNameView)}"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/chorbo_list_item_corner_radius"
        app:cardElevation="@dimen/chorbo_list_item_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/AppTheme.SurfaceStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/chorbo_list_item_size"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/chorbo_name_view"
                app:layout_constraintEnd_toEndOf="@id/chorbo_name_view"
                app:layout_constraintStart_toStartOf="@id/chorbo_name_view"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/character_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:transitionName="@{String.valueOf(chorbo.id)}"
                    app:imageUri="@{viewModel.getImageUri(chorbo.image)}"
                    app:visible='@{!chorbo.image.equals("")}'
                    tools:srcCompat="@tools:sample/avatars" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.CardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/name_initials_background"
                    android:gravity="center"
                    android:text="@{chorbo.name.substring(0, 2)}"
                    android:textAllCaps="true"
                    app:visible='@{chorbo.image.equals("")}'
                    tools:text="DA" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/chorbo_name_view"
                style="@style/TextAppearance.CardTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/chorbo_list_item_text_padding"
                android:text="@{chorbo.name}"
                android:transitionName="@{chorbo.name}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_container"
                tools:text="Chorbo name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>